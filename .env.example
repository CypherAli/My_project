# Application
APP_ENV=development
APP_NAME=trading-platform

# Gateway Service (Go)
GATEWAY_PORT=8080
GATEWAY_WS_PORT=8081
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Matching Engine (Rust)
ENGINE_PORT=9090
ENGINE_WORKERS=4
ENGINE_ORDER_BOOK_SIZE=10000

# PostgreSQL
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=trading_password
POSTGRES_DB=trading_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://trading_user:trading_password@postgres:5432/trading_db?sslmode=disable

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# NATS JetStream
NATS_URL=nats://nats:4222
NATS_CLUSTER_ID=trading-cluster
NATS_CLIENT_ID=trading-client
NATS_STREAM_NAME=TRADING_EVENTS
NATS_SUBJECTS=orders.*,trades.*,market.*

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m

# WebSocket
WS_MAX_CONNECTIONS=10000
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024

# Trading Configuration
MIN_ORDER_SIZE=0.001
MAX_ORDER_SIZE=1000000
TICK_SIZE=0.01
FEE_PERCENTAGE=0.1
