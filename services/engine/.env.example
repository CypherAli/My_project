# Matching Engine Environment Variables

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Matching Configuration
MAX_ORDERS_PER_PRICE=1000
ENABLE_LOGGING=true

# WebSocket Configuration (for future use)
WS_MAX_CONNECTIONS=10000
WS_HEARTBEAT_INTERVAL=30

# Message Queue (for future use)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
REDIS_URL=redis://localhost:6379

# Database (for trade persistence)
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading

# Monitoring
METRICS_PORT=9090
ENABLE_METRICS=true

# Performance Tuning
WORKER_THREADS=4
MAX_BLOCKING_THREADS=512
